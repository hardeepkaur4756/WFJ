@model WFJ.Models.AddLocalCounselViewModel
@Html.HiddenFor(x => x.FirmId, new { @id = "FirmId" })
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Firm Name</label>
            @Html.TextBoxFor(x => x.FirmName, new { @Class = "form-control", id = "FirmName" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(x => x.PhoneNumber, new { @Class = "form-control", id = "PhoneNumber" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Attorney Name</label>
            @Html.TextBoxFor(x => x.AttorneyName, new { @Class = "form-control", id = "AttorneyName" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Direct Line</label>
            @Html.TextBoxFor(x => x.DirectLine, new { @Class = "form-control", id = "DirectLine" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Address, new { @Class = "form-control", id = "Address" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Fax</label>
            @Html.TextBoxFor(x => x.Fax, new { @Class = "form-control", id = "Fax" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Suite</label>
            @Html.TextBoxFor(x => x.Suite, new { @Class = "form-control", id = "Suite" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @Class = "form-control", id = "Email" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>City</label>
            @Html.TextBoxFor(x => x.City, new { @Class = "form-control", id = "City" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Website</label>
            @Html.TextBoxFor(x => x.Website, new { @Class = "form-control", id = "Website" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>State/Province</label>
            @Html.TextBoxFor(x => x.State, new { @Class = "form-control", id = "State" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Federal Tax Id</label>
            @Html.TextBoxFor(x => x.FederalTaxId, new { @Class = "form-control", id = "FederalTaxId" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>ZipCode</label>
            @Html.TextBoxFor(x => x.ZipCode, new { @Class = "form-control", id = "ZipCode" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Check</label>
            @Html.CheckBoxFor(x => x.Check, new { @Class = "maginTopCheckbox", id = "Check" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Country</label>
            @Html.TextBoxFor(x => x.Country, new { @Class = "form-control", id = "Country" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>W9</label>
            @Html.CheckBoxFor(x => x.W9, new { @Class = "maginTopCheckbox", id = "W9" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>ALQ</label>
            @Html.CheckBoxFor(x => x.ALQ, new { @Class = "", id = "ALQ" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>GeneralBar</label>
            @Html.CheckBoxFor(x => x.GeneralBar, new { @Class = "", id = "GeneralBar" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Do Not Use</label>
            @Html.CheckBoxFor(x => x.DoNotUse, new { @Class = "", id = "DoNotUse" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label>Notes</label>
            @Html.TextAreaFor(x => x.Notes, new { @Class = "form-control", cols = "100", id = "Notes" })
        </div>
    </div>
</div>


<div class="col-md-12">
    <button type="button" class="btn btn-primary" id="btnAddLocalCounsel" onclick="addAssociateCounsel();">Submit</button>
    @if (Model.FirmId > 0)
    {
        <button type="button" class="btn btn-primary" onclick="deleteAssociateCounsel()">Delete</button>
}
    <button type="button" class="btn btn-primary" onclick="showLocalCounselGrid()">New Search</button>
    @if (Model.FirmId > 0)
    {
        <button type="button" class="btn btn-primary" onclick="addPersonnelRequests()">Select Firm</button>
    }
</div>
<div id="gridAssociateCounsilFileInfo" class="hide">
    <div class="table-responsive">
        <table id="associateCounselTable" class="display table dataTable table-striped layout-primary table-bordered document-center-table request-services-table">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Customer Name</th>
                    <th>WFJ file #</th>
                    <th>Attorney Name</th>
                    <th>Lien/ Collection</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.fileInformation != null)
                {
                    @Html.Partial("~/Views/LocalCounsel/_associateCounselGrid.cshtml", Model.fileInformation)
                }
            </tbody>
        </table>
    </div>
  
</div>


