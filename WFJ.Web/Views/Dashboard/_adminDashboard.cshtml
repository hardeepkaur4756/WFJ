@model WFJ.Models.AdminDashboardViewModel
@{
    string checkValue = string.Empty;
    if (Convert.ToBoolean(Session["ShowClientView"]))
    {
        checkValue = "checked";
    }
}

<label class="switch">
    <input type="checkbox" @checkValue onclick="ShowClientView()">
    <span class="slider round"></span>
</label>
<div>
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12 col-xl-6 mt-3">
            <div class="card">
                <div class="card-header justify-content-between align-items-center">
                    <h6 class="card-title">Recently Opened Account</h6>
                </div>
                <div class="">
                    <table class="table" id="recently-open-account">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Customer Name</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model.RecentlyOpenedAccounts.Any())
                                {
                                    foreach (var account in Model.RecentlyOpenedAccounts)
                                    {
                                        <tr class="zoom">
                                            <td>@account.ClientName</td>
                                            <td><a href="javascript:void(0);" onclick="redirectToPlacement(@account.FormId,@account.RequestId)">@account.CustomerName</a></td>
                                            <td>@account.Status</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-12 col-xl-6 mt-3">
            <div class="card">
                <div class="card-header justify-content-between align-items-center">
                    <h6 class="card-title">Recently Opened Clients</h6>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table font-w-600 mb-0" id="recently-open-client">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model.RecentlyOpenedClients.Any())
                                {
                                    foreach (var client in Model.RecentlyOpenedClients)
                                    {
                                        <tr class="zoom">
                                            <td>@client.ClientName</td>
                                            <td>@client.CreatedDate</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-12 col-lg-12 col-xl-6 mt-3">
            <div class="card">
                <div class="card-header justify-content-between align-items-center">
                    <h6 class="card-title">Action Required</h6>
                </div>
                <div class="card-body table-responsive p-0 div-scroll">
                    <table class="table font-w-600 mb-0" id="action-required">
                        <thead>
                            <tr>
                                <th>Attorney Name</th>
                                <th>Client Name</th>
                                <th>Customer Name</th>
                                <th>Status</th>
                                <th>Compliance Duration</th>
                                <th>last Note Date</th>
                                <th>last Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.ActionRequireds)
                            {
                                <tr class="zoom">
                                    <td>@request.AttorneyName</td>
                                    <td>@request.ClientName</td>
                                    <td><a href="javascript:void(0);" onclick="redirectToPlacement(@request.FormId,@request.RequestId)">@request.CustomerName</a></td>
                                    <td>@request.Status</td>
                                    <td>@request.ComplianceDuration</td>
                                    <td>@request.LastNoteDate</td>
                                    <td>@request.LastNote</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-12 col-xl-6 mt-3">
            <div class="card">
                <div class="card-header justify-content-between align-items-center">
                    <h6 class="card-title">Final Demand Required</h6>
                </div>
                <div class="card-body table-responsive p-0 div-scroll">
                    <table class="table font-w-600 mb-0" id="final-demand-required">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Customer Name</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var request in Model.FinalDemands)
                            {
                                <tr class="zoom">
                                    <td>@request.ClientName</td>
                                    <td>@request.CustomerName</td>
                                    <td>@request.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-12 col-lg-12 col-xl-12 mt-3">
            <div class="custom-tabs">

                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active bg-white mr-3" id="recent-payment-tab" data-toggle="pill" href="#recent-payment" role="tab" aria-controls="recent-payment" aria-selected="true">Recent Payment</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link bg-white mr-3" id="remittance-tab" data-toggle="pill" href="#remittance" role="tab" aria-controls="remittance" aria-selected="false">Remittance</a>
                    </li>
                </ul>

                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="recent-payment" role="tabpanel" aria-labelledby="recent-payment-tab">

                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive div-scroll">
                                    <table class="table font-w-600 mb-0" id="approved-payment">
                                        <thead>
                                            <tr>
                                                <th>Client Name</th>
                                                <th>Customer Name</th>
                                                <th>Form Name</th>
                                                <th>Status</th>
                                                <th>Payment Date</th>
                                                <th>Payment Amount</th>
                                                <th>WFJ Fees</th>
                                                <th>Payment Type</th>
                                                <th>Remit/Invoice Date</th>
                                                <th>Check/Invoice Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var request in Model.ApprovedPayements)
                                            {
                                                <tr class="zoom">
                                                    <td>@request.ClientName</td>
                                                    <td>@request.CustomerName</td>
                                                    <td>@request.FormName</td>
                                                    <td>@request.Status</td>
                                                    <td>@request.PaymentDate</td>
                                                    <td>@request.PaymentAmount</td>
                                                    <td>@request.WFJFees</td>
                                                    <td>@request.PaymentType</td>
                                                    <td>@request.InvoicDate</td>
                                                    <td>@request.InvoiceNumber</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="remittance" role="tabpanel" aria-labelledby="remittance-tab">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive div-scroll">
                                    <table class="table font-w-600 mb-0" id="approved-payment">
                                        <thead>
                                            <tr>
                                                <th>Client Name</th>
                                                <th>Customer Name</th>
                                                <th>Form Name</th>
                                                <th>Status</th>
                                                <th>Payment Date</th>
                                                <th>Payment Amount</th>
                                                <th>WFJ Fees</th>
                                                <th>Payment Type</th>
                                                <th>Remit/Invoice Date</th>
                                                <th>Check/Invoice Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var request in Model.RemittancePayements)
                                            {
                                                <tr class="zoom">
                                                    <td>@request.ClientName</td>
                                                    <td>@request.CustomerName</td>
                                                    <td>@request.FormName</td>
                                                    <td>@request.Status</td>
                                                    <td>@request.PaymentDate</td>
                                                    <td>@request.PaymentAmount</td>
                                                    <td>@request.WFJFees</td>
                                                    <td>@request.PaymentType</td>
                                                    <td>@request.InvoicDate</td>
                                                    <td>@request.InvoiceNumber</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>

