@model WFJ.Models.PlacementsFilterViewModel

@{
    int userType = Convert.ToInt32(Session["UserType"]);
}

    <form>
        <span id="errormessage"></span>
        @if (Model.client != null && Model.client.Count > 1)
        {
            <div class="form-group">
                <label for="ddlClient">Client</label>
                @Html.DropDownList("ddlClient", new SelectList(Model.client, "Value", "Text"), new { @Class = "form-control" })
            </div>
        }
        <div class="form-group">
            <label for="ddlFormType">Placement Type</label>
            <select id="ddlFormType" class="form-control">
                <option selected="" value="-1">All</option>
                @foreach (var item in Model.placementTypeModels)
                {
                    <option value="@item.FormTypeID">@item.FormType1</option>
                }
            </select>
        </div>
        <div class="clearfix">
            <button id="searchBtn" type="button" class="btn btn-primary float-right ml-2 mb-2 document-search-btn">
                Search
            </button>
        </div>
    </form>