@using WFJ.Models;
@model RequestDocumentViewModel

@{
    var requestDocumentList = Model.RequestDocumentDetails;
    int rowNumber = 0;
    foreach (var requestDocument in requestDocumentList)
    {
        <div class="col-md-2">
            <div class="form-group">
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input type="checkbox" class="custom-control-input"  id="sendRequestDocumentNotice-@rowNumber">
                    <label class="custom-control-label" for="sendRequestDocumentNotice-@rowNumber"></label>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                @Html.DropDownListFor(x => requestDocument.DocumentTypeId, new SelectList(Model.DocumentType, "Value", "Text", requestDocument.DocumentTypeId), "Select", new { @Class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <a href="@requestDocument.FilePath" class="for-bold" download>@requestDocument.FileName</a>
            </div>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-primary document-search-btn" onclick="removeRequestDocument('@requestDocument.RequestDocumentId','@requestDocument.RequestId','@requestDocument.PhysicalPathFileName','@rowNumber','@requestDocument.FileName')">
                Remove
            </button>
        </div>
        rowNumber++;
    }
}
