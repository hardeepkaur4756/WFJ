@model WFJ.Models.PlacementReuestsFilterViewModel

@{
    int userType = Convert.ToInt32(Session["UserType"]);
    bool IsClientUser = false;
    if((int)WFJ.Web.Models.Enums.UserType.ClientUser == userType)
    {
        IsClientUser = true;
    }
}

    <form>
        @if (IsClientUser == false)
        {
            <div class="form-group">
                <label for="ddRequestor">Requestor</label>
                <select id="ddRequestor" class="form-control">
                    <option selected="" value="-1">All</option>
                    @foreach (var item in Model.Requestors)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="ddAssignedTo">Assigned to</label>
                <select id="ddAssignedTo" class="form-control">
                    <option selected="" value="-1">All</option>
                    @foreach (var item in Model.AssignedToList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        }

        <div class="form-group row">
            <div class="col-6">
                <label for="ddStatus">Status</label>
                <select id="ddStatus" class="form-control">
                    <option selected="" value="-1">All</option>
                    @foreach (var item in Model.StatusList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-6">
                <label for="ddRegion">Region</label>
                <select id="ddRegion" class="form-control">
                    @foreach (var item in Model.RegionList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>

        @if (IsClientUser == false)
        {
            <div class="form-group">
                <label for="ddCollector">Collector</label>
                <select id="ddCollector" class="form-control">
                    <option selected="" value="-1">All</option>
                    @foreach (var item in Model.Collectors)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        }

        <div class="form-group row">
            <div class="col-6">
                <label for="inputDate">Begin Date</label>
                <input id="beginDate" type="text" class="form-control jdate-picker" />
            </div>
            <div class="col-6">
                <label for="inputDate">End Date</label>
                <input id="endDate" type="text" class="form-control jdate-picker" />
            </div>
        </div>

