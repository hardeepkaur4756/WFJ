
@{
    ViewBag.Title = "_login";
}

    <div>
        <div class="form-group mb-3">
            <label for="emailaddress">Username / Email address</label>
            <input class="form-control login-text"
                   type="email"
                   id="emailaddress"
                   required=""
                   placeholder="Enter your Username / Email address" />
        </div>

        <div class="form-group mb-3">
            <label for="password">Password</label>
            <input class="form-control login-text"
                   type="password"
                   required=""
                   id="password"
                   placeholder="Enter your password" />
        </div>

        <div class="form-group mb-3">
            <div class="custom-control custom-checkbox">
                <input type="checkbox"
                       class="custom-control-input"
                       id="checkbox-signin"
                       checked="" />
                <label class="custom-control-label" for="checkbox-signin">Remember me</label>
            </div>
        </div>

        <div class="form-group mb-0">
            <button class="btn btn-primary" type="submit">Log In</button>
        </div>
        <div class="mt-2">
            <a href="javascript:void(0)" id="goToforgotPassword" class="anchor-design">Forget Your Password</a>
            @*<a href="/Home/ForgotPassword" id="goToforgotPassword" class="anchor-design">Forget Your Password</a>*@
        </div>
    </div>
